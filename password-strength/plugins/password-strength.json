{
	"name": "Password Strength",
	"description": "Show calculated password strength estimation on the Create Account page.",
	"version": "2.3",
	"author": "slawkens",
	"contact": "slawkens@gmail.com",
	"require": {
		"myaac": "1.8.3",
		"php": "8.1"
	},
	"hooks": [
		{
			"type": "HOOK_ACCOUNT_CREATE_AFTER_PASSWORD",
			"file": "plugins/password-strength/display-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_CHANGE_PASSWORD_AFTER_NEW_PASSWORD",
			"file": "plugins/password-strength/display-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_LOST_CHECK_CODE_FINISH_AFTER_PASSWORD",
			"file": "plugins/password-strength/display-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_LOST_RECOVERY_KEY_STEP_2_AFTER_PASSWORD",
			"file": "plugins/password-strength/display-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_CREATE_POST",
			"file": "plugins/password-strength/verify-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_CHANGE_PASSWORD_POST",
			"file": "plugins/password-strength/verify-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_LOST_EMAIL_SET_NEW_PASSWORD_POST",
			"file": "plugins/password-strength/verify-strength.php"
		},
		{
			"type": "HOOK_ACCOUNT_LOST_RECOVERY_KEY_STEP_3_POST",
			"file": "plugins/password-strength/verify-strength.php"
		}
	],
	"settings": "plugins/password-strength/settings.php",
	"uninstall": [
		"plugins/password-strength.json",
		"plugins/password-strength"
	]
}
